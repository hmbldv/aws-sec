# Example Terraform variables file
# Copy to terraform.tfvars and fill in your values
# terraform.tfvars is gitignored and will not be committed

# Required: Your AWS account ID
aws_account_id = "123456789012"

# Required: Your GitLab project path for OIDC authentication
gitlab_project_path = "username/aws-sec"

# Required: Your SSH public key for EC2 access
ssh_public_key = "ssh-ed25519 AAAA... your-email@example.com"

# Optional: Restrict admin access to your IP (recommended!)
# admin_cidr_blocks = ["203.0.113.42/32"]

